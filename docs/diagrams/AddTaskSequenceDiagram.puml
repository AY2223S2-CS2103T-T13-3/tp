box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

[-> LogicManager : execute("add-task 1 d/Interview by/30-12-2023")

LogicManager -> InternshipBookParser : parseCommand("add-task 1 d/Interview by/30-12-2023")

create AddTaskCommandParser
InternshipBookParser -> AddTaskCommandParser

AddTaskCommandParser --> InternshipBookParser

